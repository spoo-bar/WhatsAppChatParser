<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>WhatsAppChatParser</RootNamespace>
    <AssemblyName>WhatsAppChatParser</AssemblyName>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Spoorthi S</Authors>
    <LangVersion>7.1</LangVersion>
    <PackageLicenseUrl></PackageLicenseUrl>
    <PackageProjectUrl />
    <RepositoryUrl>https://github.com/spoon611/WhatsAppChatParser</RepositoryUrl>
    <PackageTags>WhatsApp, Parser</PackageTags>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <Description>Parser for exported WhatsApp chats</Description>
    <Copyright>Copyright © Spoorthi S 2019</Copyright>
    <PackageIconUrl>https://raw.githubusercontent.com/spoon611/WhatsAppChatParser/master/img/logo.png</PackageIconUrl>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageReleaseNotes>Support ToXML extension for chat list</PackageReleaseNotes>
    <Version>2.1.0</Version>
    <AssemblyVersion>2.1.0.0</AssemblyVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants />
    <DocumentationFile>C:\Code\Misc\WhatsAppChatParser\WhatsAppChatParserLibrary\WhatsAppChatParser.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
  </ItemGroup>

</Project>
